<p id="notice"><%= notice %></p>
<h1>Warenkorb</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Buch</th>
      <th>Preis</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= number_to_currency book.price %></td>
    </tr>  
    <% end %>
    <tfoot>
      <tr>
        <td>Summe:</td>
        <td><%= number_to_currency @cart.sum %></td>
      </tr>
    </tfoot>
  </tbody>
</table>
