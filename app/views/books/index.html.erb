<%= form_tag books_path, :method => 'get' do%>
<div class="form-group">
  <%= text_field_tag :search, params[:search], placeholder: "Suche..." %>
  <%= submit_tag "Los", :name => nil %>
</div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Beschreibung</th>
      <th>Preis</th>
      <th>Autor</th>
      <th>Genre</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= simple_format(truncate(book.desc, length: 200)) %></td>
        <td><%= number_to_currency book.price %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Zum Buch', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
