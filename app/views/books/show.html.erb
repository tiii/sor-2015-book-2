<p id="notice"><%= notice %></p>

<h2>
  <%= @book.title %>
</h2>
<div>

</div>
<p>
  <strong>Desc:</strong>
  <%= @book.desc %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>

<% @book.reviews.each do |review| %>

<div class="review-wrapper">
  <div class="headline"><%=review.headline%></div>
  <div class="bewertung"><%=review.user.name%> hat das Produkt mit <%=review.value%>/10 Punkten bewertet.</div>
  <div><%=review.review%></div>
</div>

<%end%>

<% if user_signed_in? %>
<div class="comment-input">
  <%= render 'reviews/form'%>
</div>
<% else %>
  <p>Du bist nicht eingeloggt. <%= link_to("Login", new_user_session_path) %></p>
<% end %>

<%= link_to 'Back', books_path %>
